<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/text_view"
        android:gravity="top"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDocIn"
            android:text="@string/btn_doc_in"
            android:layout_marginEnd="10dp"
            style="@style/DeafultButton"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDocEx"
            android:text="@string/btn_doc_ex"
            android:layout_marginStart="10dp"
            style="@style/DeafultButton"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGhiIn"
            android:text="@string/btn_ghi_in"
            android:layout_marginEnd="10dp"
            style="@style/DeafultButton"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGhiEx"
            android:text="@string/btn_ghi_ex"
            android:layout_marginStart="10dp"
            style="@style/DeafultButton"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>